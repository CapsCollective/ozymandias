        </ui:VisualElement>
        <ui:VisualElement style="width: 3px;&#10;height: 100%;&#10;background-color: rgb(84, 84, 84);&#10;" />
        <ui:VisualElement name="RightColumn" style="right: auto;&#10;width: 100%;&#10;height: 100%;&#10;flex-grow: 1;&#10;margin-top: 0;&#10;flex-shrink: initial;&#10;flex-basis: 80%;&#10;padding-top: 2px;&#10;">
