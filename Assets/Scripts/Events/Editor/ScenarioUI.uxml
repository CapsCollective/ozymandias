        </ui:VisualElement>
        <ui:VisualElement style="height: 100%;&#10;width: 3px;&#10;background-color: rgb(84, 84, 84);&#10;" />
        <ui:VisualElement name="VariablesColumn" style="right: auto;&#10;width: auto;&#10;height: 100%;&#10;flex-grow: 1;&#10;margin-top: 0;&#10;flex-shrink: initial;&#10;flex-basis: 70%;&#10;align-items: stretch;&#10;padding-left: 2px;&#10;padding-right: 2px;&#10;padding-top: 2px;&#10;">
