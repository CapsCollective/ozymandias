            <ui:Label text="Event Editor" style="font-size: 22px;&#10;-unity-font-style: bold;&#10;margin-left: 5px;&#10;margin-right: 5px;&#10;margin-top: 5px;&#10;margin-bottom: 5px;&#10;" />
