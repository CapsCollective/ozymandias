            <ui:Button text="New Event" name="btnNewEvent" />
            <uie:ToolbarSearchField focusable="True" name="searchLibrary" style="flex-basis: auto;&#10;width: auto;&#10;" />
            <ui:ListView focusable="True" name="listViewLibrary" item-height="30" style="flex-grow: 1;&#10;" />
