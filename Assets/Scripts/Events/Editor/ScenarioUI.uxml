<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements">
    <ui:VisualElement name="Main" style="height: 100%;&#10;width: 100%;&#10;align-items: flex-start;&#10;flex-direction: row;&#10;flex-shrink: 1;&#10;flex-basis: 100%;&#10;flex-grow: 0;&#10;justify-content: space-between;&#10;">
        <Style src="ScenarioUI.uss" />
